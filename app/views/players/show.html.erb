<!-- profile page -->

<p id="notice"><%= notice %></p>

<p>
  <%= image_tag @player.player_image.profile.url %>
</p>

<p>
  <b>Name:</b>
  <%= @player.name %>
</p>

<p>
  <b>Email:</b>
  <%= @player.email %>
</p>

<p><% if can? :read, @game %>  
