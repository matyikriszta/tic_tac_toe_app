<div id="sign_up_form">

<h2>Sign up</h2>

<p>It will be a ton of fun, promise!</p>

<%= form_for(@player) do |f| %>

<div class="field">
    <%= f.text_field :name, :placeholder => "Name" %>
  </div>
  <div class="field">
    <%= f.text_field :email, :placeholder => "Your email" %>
  </div>
  <div class="field">
    <%= f.password_field :password, :placeholder => "Your password" %>
  </div>
  <div class="field">
    <%= f.password_field :password_confirmation, :placeholder => "Re-enter your password" %>
  </div>
  <div>
    <%= submit_tag "Sign up", class: "login_button" %>
  </div>
<% end %>

</div>
