<h1>Editing player</h1>

<%= form_for(@player) do |f| %>

<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</div>

<div class="field">
    <%= f.label :player_image %><br />
    <%= f.file_field :player_image %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

<%= link_to 'Back', @player %>
