<h2>Current games</h2> 

<table>
  <tr>
    <th>Name</th>
    <th>Player 1</th>
    <th>Player 2</th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= link_to game.name, game %></td>
    <td><%= link_to image_tag(game.player1.player_image.thumb.url), game.player1 %></td>
    <td><%= link_to image_tag(game.player2.player_image.thumb.url), game.player2 %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
  </tr>
<% end %>
</table>

